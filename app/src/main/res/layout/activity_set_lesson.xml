<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_std"
    tools:context=".teacherMenu.SetLessonActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/dateSet"
        app:cornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="40dp"
        android:onClick="setDate"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/bottom_nav"
        android:text="Дата"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSet"
        app:cornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:onClick="setTime"
        android:backgroundTint="@color/bottom_nav"
        android:text="Время"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateSet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        app:cornerRadius="25dp"
        android:layout_height="70dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="@color/red"
        android:text="Добавить"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeSet" />

</androidx.constraintlayout.widget.ConstraintLayout>