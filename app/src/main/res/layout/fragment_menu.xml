<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_std"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/for_fields"
        android:layout_marginTop="20dp"
        android:text="Главное меню"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/education_btn"
            app:cornerRadius="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:backgroundTint="@color/red"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:text="Обучение"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prices_btn"
            app:cornerRadius="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:backgroundTint="@color/red"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:text="Стоимость"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/groups_btn"
            app:cornerRadius="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:backgroundTint="@color/red"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:text="Группы"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/teachers_btn"
            app:cornerRadius="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:backgroundTint="@color/red"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:text="Преподаватели"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>